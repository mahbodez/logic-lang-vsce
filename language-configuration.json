{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"]
  ],
  "autoClosingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "wordPattern": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(define|constraint|const|expect)\\s+.*$",
    "decreaseIndentPattern": "^\\s*$"
  },
  "onEnterRules": [
    {
      "beforeText": ";\\s*$",
      "action": {
        "indent": "none"
      }
    }
  ]
}